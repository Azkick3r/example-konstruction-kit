apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: pgadmin-application-ingress
  annotations:
    deploy.kubernetes.io/ingress.class: "nginx"
    nginx.ingress.deploy.kubernetes.io/rewrite-target: /$2
    nginx.ingress.deploy.kubernetes.io/configuration-snippet: |
      proxy_set_header X-Script-Name /pgadmin;
#      proxy_set_header Host $host;
#      proxy_pass http://localhost:5050/;
#      proxy_redirect off;

spec:
  ## TLS + HTTP2
  tls:
    - hosts:
        - goafabric.org
      secretName: server-certificate-secret
  rules:
    - host: goafabric.org
      http:
        paths:
          - path: /pgadmin(/|$)(.*)
            pathType: Prefix
            backend:
              service:
                name: pgadmin-application
                port:
                  number: 5050